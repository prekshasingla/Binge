<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
    </style>
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_account_circle_black_24dp</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white_opaque</item>
        <item name="colorPrimaryDark">#d3d3d3</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color</item>
        <item name="colorAccent">#f1bb3a</item>
        <!--<item name="android:statusBarColor">#FF000000</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>
    <style name="AppTheme_search">
        <item name="colorAccent">@color/white_opaque</item>
        <item name="android:textColorSecondary">@color/white_opaque</item>
    </style>
    <style name="AppTheme_onBoarding">
        <item name="colorPrimaryDark">#272</item>
    </style>

    <style name="WriteReview" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_primary</item>
        <item name="android:textColor">@color/white_opaque</item>
        <item name="android:textColorSecondary">@color/white_opaque</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/pitch_black</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white_opaque</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
