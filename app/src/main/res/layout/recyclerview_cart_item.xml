<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/veg_nonveg_cart"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/pitch_black" />

    <TextView
        android:id="@+id/dish_name_cart_recyclerview"
        android:layout_width="144dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/quicksand"
        android:text="Dish Name"
        android:textSize="12dp"
        android:textStyle="bold" />

    <com.example.prakharagarwal.binge.rishabhcutomview.CartNumberButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/elegantNumberButton_cart_recyclerview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="101dp"
        app:initialNumber="0"
        app:finalNumber="10"
        app:backGroundColor="@color/lime_green"
        android:layout_alignParentRight="true"
        android:layout_marginRight="101dp"></com.example.prakharagarwal.binge.rishabhcutomview.CartNumberButton>

    <TextView
        android:id="@+id/price_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="47dp"
        android:fontFamily="@font/quicksand"
        android:text="â‚¹ Price"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="47dp" />

    <ImageView
        android:id="@+id/close_cart_item"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true" />


</RelativeLayout>