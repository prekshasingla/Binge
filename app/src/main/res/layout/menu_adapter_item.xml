<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/menu_adapter_lin_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_item_veg"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="0.1"
                android:src="@mipmap/veg" />

            <TextView
                android:id="@+id/menu_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dish"
                android:textColor="#525257"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/menu_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.3"
                android:layout_marginRight="5dp"
                android:textAlignment="viewEnd"
                android:textColor="#525257"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/menu_item_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.7"
                android:textColor="#7d7d7d"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/menu_adapter_cart"
                android:layout_width="0dp"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:weightSum="1">
                <Button
                    android:id="@+id/menu_adapter_minus"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_remove_circle_outline_yellow_24dp" />
                <TextView
                    android:id="@+id/menu_adapter_add_number"
                    android:layout_width="0dp"
                    android:text="0"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_weight="0.3"
                    />
                <Button
                    android:id="@+id/menu_adapter_plus"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_add_circle_outline_yellow_24dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/menu_item_separatorLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="4dp"
        android:background="#cbcbcb"
        android:padding="4dp" />


</LinearLayout>