<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        >

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="170dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageview_food_mainScreen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/frag_stories_lin_lay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/photo_background_protection_top"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/dish_name_mainscreen"
                            android:layout_width="0dp"
                            android:paddingLeft="10dp"
                            android:drawablePadding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:padding="10dp"
                            android:text="Dish Name"
                            android:textColor="@color/abc_primary_text_disable_only_material_dark"
                            android:textSize="20sp"/>
                            <!--android:drawableLeft="@drawable/ic_keyboard_backspace_white_24dp"-->
                            <!--/>-->

                    </LinearLayout>
                    <ImageView
                        android:src="@color/colorAccent"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="100dp"
                        android:id="@+id/rating_mainScreen"
                        />

                </LinearLayout>


                </RelativeLayout>

        </FrameLayout>


        <TextView
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:layout_gravity="bottom|center"
            android:id="@+id/name_rest_mainScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/abc_font_family_body_1_material"
            android:text="Restaurant Name"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"/>


   </android.support.v7.widget.CardView>
</LinearLayout>