<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative_layout_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageview_food_mainScreen"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:src="@drawable/image1"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:id="@+id/frag_stories_lin_lay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/photo_background_protection_top"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/dish_name_mainscreen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:paddingLeft="10dp"
                            android:text="Dish Name"
                            android:textColor="@color/abc_primary_text_disable_only_material_dark" />


                    </LinearLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/name_rest_mainScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@string/abc_font_family_body_1_material"
                    android:gravity="bottom"
                    android:text="Restaurant Name"
                    android:textColor="@color/cardview_dark_background"
                    android:textStyle="bold" />

            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingBottom="15dp"
                app:layout_anchor="@id/relative_layout_data"
                app:layout_anchorGravity="bottom|center_horizontal">

                <ImageView
                    android:id="@+id/fab_presetfragment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:elevation="6dp"
                    android:src="#ff6100" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="16dp"
                    android:id="@+id/rating_mainScreen"
                    android:layout_marginBottom="3dp"
                    android:text="4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />
            </FrameLayout>


        </android.support.design.widget.CoordinatorLayout>

    </android.support.v7.widget.CardView>
