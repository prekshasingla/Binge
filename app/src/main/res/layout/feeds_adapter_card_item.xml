<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/article_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="@dimen/cardview_default_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingBottom="5dp">

                 <WebView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_webview"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#e4e4e4"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
            <!-- tools:ignore="WebViewLayout"
             />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:fontFamily="monospace"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Restaurant Name"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_rating"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.1"
                android:gravity="center"
                android:visibility="gone"
                android:text="Rating" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/feeds_item_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="Casual Dining"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/item_cost_for_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="right"
                android:text="Cost for two: 1500"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/item_type_of_cuisine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cuisine"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/feeds_item_timings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="right"
                android:text="12pm-10pm"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/primary_btn_review"
                android:text="Review"
                android:textAllCaps="false"
                android:textColor="#003663" />

            <Button
                android:id="@+id/button_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/primary_btn_menu"
                android:text="Menu"
                android:textAllCaps="false"
                android:textColor="#ff5500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/share_button_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                android:gravity="left|center"

                android:padding="5dp"
                android:text="Share" />

            <TextView
                android:id="@+id/call_button_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Call"
                android:textColor="#099e44" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".16" />

            <TextView
                android:id="@+id/feeds_adapter_item_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:drawableLeft="@drawable/ic_room_black_24dp"
                android:gravity="center|left"
                android:text="Locate" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
