<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.prakharagarwal.binge.MainScreen.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_activity_relative_layout"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:theme="@style/AppTheme.NoActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/location_layout"
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Your Location"
                            android:layout_marginTop="10dp"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            android:drawableRight="@drawable/ic_expand_more_black_24dp"
                            android:textColor="@color/black85"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/user_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Locating  ..."
                            android:maxLines="1"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <ImageView
                        android:src="@drawable/search_black"
                        android:layout_marginLeft="110dp"
                        android:id="@+id/search_icon"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="20dp"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical|right"

                        />
                    <ImageView
                        android:src="@drawable/filter"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|right"

                        />
                </LinearLayout>


            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:tabMode="scrollable"
                android:minHeight="?attr/actionBarSize"
                app:tabBackground="@drawable/tab_bg_selector"
                app:tabSelectedTextColor="#f1bb3a"
                app:tabTextColor="#ccc"
                app:tabIndicatorColor="@color/white_opaque"
                android:background="@color/white_opaque"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>



        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar">

        </android.support.v4.view.ViewPager>


    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
