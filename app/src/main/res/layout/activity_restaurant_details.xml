<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stories_sliding_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    sothree:umanoAnchorPoint=".70"
    sothree:umanoDragView="@+id/dragmenu"
    sothree:umanoFadeColor="#10000000"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="430dp"
    sothree:umanoScrollableView="@+id/linear2">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_opaque"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.NoActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:elevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/restaurant_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".95"
                        android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                        android:drawablePadding="5dp"
                        android:gravity="left|center_vertical"
                        android:text="Restaurant Name"
                        android:textColor="#0d0d0d"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/share_button_stories"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_share_black_24dp" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>


        <LinearLayout

            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#454545" />

            <TextView
                android:id="@+id/resCostForTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#454545" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout1"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#454545" />

            <TextView
                android:id="@+id/openClosed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#454545" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/call_item_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:gravity="center|left"
                android:text="Call"
                android:textColor="#279028" />

            <TextView
                android:id="@+id/locate_item_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:drawableLeft="@drawable/ic_room_black_24dp"
                android:gravity="left|center"
                android:text="Locate"
                android:textColor="#095488" />

            <LinearLayout
                android:id="@+id/btn_place_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/primary_btn"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/btn_place_order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingRight="1dp"
                    android:text="Place Order"
                    android:textColor="#f1bb3a"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/cart_qty"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/background_circle_yellow"
                    android:gravity="center"
                    android:text="1"
                    android:visibility="gone"
                    android:textColor="@color/white_opaque"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black85"></View>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white_opaque">

            <RelativeLayout
                android:id="@+id/dragmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/grey" />


                <LinearLayout

                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/youtube_view"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/veg_image_selected"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/veg" />

                    <TextView
                        android:id="@+id/dish_name_selected"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Dish"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price_selected"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:gravity="right"
                        android:text="Price"
                        android:textColor="#7d7d7d"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin1"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/desc_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="description of the dish will be very long."
                        android:textColor="#7d7d7d"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/heading_linlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin2"
                    android:layout_gravity="center"
                    android:background="@drawable/menu_text_background"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableRight="@drawable/ic_expand_less_black_24dp"
                        android:fontFamily="sans-serif"
                        android:foregroundGravity="center"
                        android:gravity="left"
                        android:text="MENU"
                        android:textColor="#454545"
                        android:textSize="15sp" />


                </LinearLayout>
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/menu_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/restaurant_bottom_recycler"
                android:layout_below="@+id/dragmenu">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/restaurant_bottom_recycler"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
